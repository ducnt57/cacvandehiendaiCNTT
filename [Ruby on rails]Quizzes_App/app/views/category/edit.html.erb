<% provide(:title, "Quiz App | Edit Category") %>
<div class="row">
	<ul class="nav nav-pills nav-stacked" id="subject">
  		<li class="active"><a>Edit Category: <%= @data_cate.name %></a></li>
  	</ul>
  	<div class="clearfix"></div>
	<br/>	
  	<div class="col-lg-12">
  		<%= form_tag "/category/update" , :class => 'form-default' do %>
			<div id="notice" class="text-danger"><b><%= notice %></b></div><br/>
			<div class="form-group">			    
			    <%= label_tag :name %>			    
			    <%= text_field_tag :name, @data_cate.name, :class => 'form-control' %>
			</div>
			<div class="form-group">			    
			    <%= label_tag :slug %>			    
			    <%= text_field_tag :slug, @data_cate.slug, :class => 'form-control' %>
			</div>
			<div class="form-group">			    
			    <%= label_tag :icon %>			    
			    <%= text_field_tag :icon, @data_cate.icon, :class => 'form-control' %>
			</div>
			<div>
				<input type="hidden" name="cate_id" value="<%= @data_cate.cate_id %>"/>
				<input type="hidden" name="cate_slug" value="<%= @data_cate.slug %>"/>
				<%= submit_tag "Edit category" , :class => 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>
