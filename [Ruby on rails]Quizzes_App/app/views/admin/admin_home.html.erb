<% provide(:title, "Quiz App | Admin") %>
<div class="row">
	<ul class="nav nav-pills nav-stacked" id="subject">
  		<li class="active"><a>Admin management</a></li>
  	</ul>
  	<div class="clearfix"></div>
	<br/>	
  	<div class="col-lg-12">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation" class="active"><a href="#tabs1" aria-controls="home" role="tab" data-toggle="tab">Show user</a></li>
			<li role="presentation"><a href="#tabs2" aria-controls="profile" role="tab" data-toggle="tab">Show Category</a></li>		
			<li role="presentation"><a href="#tabs3" aria-controls="settings" role="tab" data-toggle="tab">Show Quizzes</a></li>		
		</ul>  
	</div>
	<div class="clearfix"></div>
	<br/>
	<div class="col-lg-12">
		<!-- Tab panes -->
		<div class="tab-content">
		    <div role="tabpanel" class="tab-pane active" id="tabs1">
		    	<a href="/admin/user-add" class="btn btn-danger">Add user</a>
		    	<table class="table table-striped">
		    		<thead>
		    			<th>ID</th>
		    			<th>Username</th>
		    			<th>Fullname</th>
		    			<th>Email</th>
		    			<th>Level</th>
		    			<th>Edit</th>
		    			<th>Del</th>
		    		</thead>
		    		<tbody>
		    			<%
		    				@user= User.all
		    				@user.each do |f|
		    			%>
		    			<tr>
		    				<td><%= f.id %></td>
		    				<td><%= f.username %></td>
		    				<td><%= f.fullname %></td>
		    				<td><%= f.email %></td>
		    				<%
		    					if f.level== "0"
		    				%>
		    					<td>Admin</td>
		    				<%
		    					else 
		    				%>
		    					<td>Member</td>
		    				<%
		    					end
		    				%>
		    				<td><span class="glyphicon glyphicon-pencil text-success" aria-hidden="true"></span></td>
		    				<td><span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span></td>
		    			</tr>
		    			<%
		    				end 
		    			%>
		    		</tbody>
		    	</table>
		    </div>
		    <div role="tabpanel" class="tab-pane" id="tabs2">
		    	<a href="/category/new" class="btn btn-danger">Add category</a>
		    	<table class="table table-striped">
		    		<thead>
		    			<th>ID</th>
		    			<th>Name</th>
		    			<th>Slug</th>	    			
		    			<th>Edit</th>
		    			<th>Del</th>
		    		</thead>
		    		<tbody>
		    			<%
		    				@cate= Categories.all
		    				@cate.each do |k|
		    			%>
		    			<tr>
		    				<td><%= k.cate_id %></td>
		    				<td><%= k.name %></td>
		    				<td><%= k.slug %></td>
		    				<td><a href="/category/edit/<%= k.cate_id %>/<%= k.slug %>"><span class="glyphicon glyphicon-pencil text-success" aria-hidden="true"></span></a></td>
	    					<td><a href="/category/del/<%= k.cate_id %>"><span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span></a></td>
		    			</tr>
		    			<% end %>
		    			
		    		</tbody>
		    	</table>
		    </div>	    
		    <div role="tabpanel" class="tab-pane" id="tabs3">
		    	<a href="/quizzes/new" class="btn btn-danger">Add quizzes</a>
		    	<table class="table table-striped">
		    		<thead>
		    			<th>ID</th>
		    			<th>Quizzes content</th>
		    			<th>Category</th>
		    			<th>Is correct</th>	    			
		    			<th>Edit</th>
		    			<th>Del</th>
		    		</thead>
		    		<tbody>
		    			<%
		    				@quiz= Quizzes.all
		    				@quiz.each do |l|
		    			%>
		    			<tr>
		    				<td><%= l.quiz_id %></td>
		    				<td><%= l.quiz_content %></td>
		    				<%
		    					@cate= Categories.find(l.cate_id)
		    				%>
		    				<td><%= @cate.name %></td>	    				  				
		    				<td><%= l.is_correct %></td>
		    				<td><a href="/quizzes/edit/<%= l.quiz_id %>/<%= l.quiz_slug %>"<span class="glyphicon glyphicon-pencil text-success" aria-hidden="true"></span></a></td>
	    					<td><a href="/quizzes/del/<%= l.quiz_id %>"><span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span></a></td>
		    			</tr>
		    			<% end %>
		    			
		    		</tbody>
		    	</table>
		    </div>	    
		</div>
	</div>
</div>

