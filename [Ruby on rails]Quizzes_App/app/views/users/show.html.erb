<div class="row">
<div class="col-lg-12">
<% provide(:title, "Quiz App | Profile") %>
<h1>Profile</h1>

<%= form_for @user, :class => 'form-horizontal' do |f| %>
	<div class="form-group">
		<div class="col-md-3">
		</div>
		<div id="notice" class="text-danger col-md-8"><b><%= notice %></b></div>  
	  	<br/>
	  	<% if @user.errors.any? %>
	    	<div class="alert alert-danger col-md-8">
	      		<ul>
	        	<% for message in @user.errors.full_messages %>
	          		<li><%= message %></li>
	        	<% end %>
	      		</ul>
	    	</div>
	  	<% end %>
  	</div>
	<div class="form-group">
    	<%= f.label :username , :class => 'control-label col-md-3' %>
    	<div class="col-md-8">
    		<%= f.text_field :username , :class => 'form-control' %>
    	</div>
  	</div>
  	<!-- 
  	<div class="clearfix"></div><br/>
  	<div class="form-group">
    	<%= f.label :password , :class => 'control-label col-md-3' %>
    	<div class="col-md-8">
    		<%= f.text_field :password_hash , :class => 'form-control' %>
    	</div>
  	</div>
  	-->
  	<div class="clearfix"></div><br/>
  	<div class="form-group">
    	<%= f.label :fullname , :class => 'control-label col-md-3' %>
    	<div class="col-md-8">
    		<%= f.text_field :fullname , :class => 'form-control' %>
    	</div>
  	</div>
  	<div class="clearfix"></div><br/>
  	<div class="form-group">
    	<%= f.label :email , :class => 'control-label col-md-3' %>
    	<div class="col-md-8">
    		<%= f.text_field :email , :class => 'form-control' %>
    	</div>
  	</div>
    <div class="clearfix"></div><br/>
    <div class="form-group">
      <%= f.label :score , :class => 'control-label col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :score , :class => 'form-control', disabled: true %>
      </div>
    </div>
    <div class="clearfix"></div><br/>
    <div class="form-group">
      <%= f.label :created_at , :class => 'control-label col-md-3' %>
      <div class="col-md-8">
        <%= f.text_field :created_at , :class => 'form-control', disabled: true %>
      </div>
    </div>
  	<div class="clearfix"></div><br/>
  	<div class="form-group">
  		<div class="col-md-3"></div>
  		<div class="col-md-8">
    		<%= f.submit "Edit infomation" , :class => 'btn btn-success' %>
    	</div>	
  	</div>
<% end %>


</div>
</div>
