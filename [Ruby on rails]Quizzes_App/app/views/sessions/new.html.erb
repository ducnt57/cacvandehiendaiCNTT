<div class="row">
<div class="col-lg-7">
<% provide(:title, "Quiz App | Login") %>
<h1>Log in</h1>
<hr/>
<% flash.each do |key, value| %>
  <div class="alert alert-danger"><%= value %></div>
<% end %>

<%= form_tag sessions_path , :class => 'form-default' do %>
	<div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] , :class => 'form-control'%>
  </div>	
	<div class="form-group">
   	<%= label_tag :password %>
   	<%= password_field_tag :password , params[:password] ,:class => 'form-control' %>
  </div>
  <div class="form-group">
    <div class="pull-left">      
      <input type="checkbox" name="remember_me"> Remember me
    </div>
    <div class="pull-right">
      <p>Don't have an account yet? <a href="/register">Create an account</a></p>
    </div>
  </div>
  <div class="clearfix"></div>
  <br/>
  <div class="form-group">
    <%= submit_tag "Log in" , :class => 'btn btn-danger' %>
  </div>
<% end %>
</div>
</div>
